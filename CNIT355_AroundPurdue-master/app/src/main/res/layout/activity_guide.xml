<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GuideActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/purdue"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/baloo"
                android:text="PURDUE MEMORIAL UNION"
                android:textAlignment="center"
                android:textSize="20dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:id="@+id/ScrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtRate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:shadowColor="#F5A623"
                        android:shadowDx="12"
                        android:shadowDy="12"
                        android:shadowRadius="8"
                        android:text="⭐⭐⭐⭐⭐"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        app:srcCompat="@drawable/attraction1_purdue_union_hotel"></ImageView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtFilter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:background="@color/purdue"
                            android:fontFamily="@font/basic"
                            android:padding="5dp"
                            android:text="#PURDUE"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            tools:ignore="TextContrastCheck" />

                        <TextView
                            android:id="@+id/txtDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:background="@drawable/border"
                            android:fontFamily="@font/basic"
                            android:padding="5dp"
                            android:text="Memorial Union "
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="16sp" />
                        />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtContact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:background="@drawable/border2"
                        android:fontFamily="@font/basic"
                        android:padding="5dp"
                        android:text="Contact : "
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/txtPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:background="@drawable/border2"
                        android:fontFamily="@font/basic"
                        android:padding="5dp"
                        android:text="Price : "
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/txtLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:background="@drawable/border2"
                        android:fontFamily="@font/basic"
                        android:padding="5dp"
                        android:text="Location : "
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/txtTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:background="@drawable/border2"
                        android:fontFamily="@font/basic"
                        android:padding="5dp"
                        android:text="Time : "
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/txtRecommendation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:background="@drawable/border2"
                        android:fontFamily="@font/basic"
                        android:padding="5dp"
                        android:text="Recommendations : "
                        android:textColor="#000000"
                        android:textSize="18sp" />

                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_weight="1"
                android:background="@color/white">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnLink"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:layout_weight="80"
                    android:background="@color/purdue"
                    android:onClick="clickLink"
                    android:text="Website"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtRecommendation"
                    app:rippleColor="@color/purdue" />

                <ImageView
                    android:id="@+id/imgUnsave"
                    android:layout_width="10dp"
                    android:layout_height="50dp"
                    android:layout_margin="4dp"
                    android:layout_weight="20"
                    android:background="@color/purdue"
                    android:onClick="onClickSave"
                    android:padding="5dp"
                    app:srcCompat="@drawable/unsave" />

                <ImageView
                    android:id="@+id/imgMap"
                    android:layout_width="10dp"
                    android:layout_height="50dp"
                    android:layout_margin="4dp"
                    android:layout_weight="20"
                    android:background="@color/purdue"
                    android:padding="5dp"
                    app:srcCompat="@drawable/symbol_map" />

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
